<h2>Novedades:</h2>

<div class="container" style="margin-top: 50px">
    <div class="row">
        <p class="text-end"> Bienvenido {{persona}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
</div>

<div class="row">
    <div class="col-7">
        <h3>Inventario de libros</h3>
    </div>
    <div class="cool-5 text-end">
        <a class="btn btn-success" href="/admin/inventario/nuevo"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Genero</th>
                    <th scope="col">Autor</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each inventario}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{genero}}</td>
                    <td>{{autor}}</td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href="/admin/inventario/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a class="btn btn-secondary" href="/admin/inventario/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>
    </div>
</div>