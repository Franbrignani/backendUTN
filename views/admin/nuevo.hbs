<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo libro</h4>
            <form action="/admin/inventario/nuevo" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Genero" name="genero"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Autor" name="autor"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error }}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>